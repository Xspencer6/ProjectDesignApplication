<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryFragment">

    <FrameLayout
        android:id="@+id/dashboardLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="450dp"
        android:background="@color/yinmnBlue"
        >

        <TextView
            android:id="@+id/dashboardTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/historyButton"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- WHITE LINE FOR DESIGN-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="110dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@android:color/white"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/mapping_main_layout"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="155dp"
        android:layout_marginBottom="136dp"
        android:background="@drawable/rounded_login_ui"
        android:backgroundTint="@color/white"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded_login_ui"
            android:backgroundTint="@color/columbiaBlue"
            >


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/columbiaBlue"
                android:padding="16dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Repeating log entry -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="16dp">

                        <!-- Date -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22 Feb 2024"
                            android:textSize="16sp"
                            android:textColor="#000000" />
                        <!-- Divider line -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000000"
                            android:layout_marginTop="8dp" />

                        <!-- Icons row -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="4dp"
                            android:layout_marginStart="8dp">

                            <!-- Red dot icon and Text -->
                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="#FF4C4C"
                                android:layout_marginEnd="4dp"
                                android:layout_gravity="center_vertical"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="112 Defects Found"
                                android:layout_marginTop="5dp"
                                android:textSize="14sp"
                                android:textColor="#000000"
                                android:layout_marginEnd="12dp" />

                            <!-- White dot icon and Text -->
                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="#FFFFFF"
                                android:layout_marginEnd="4dp"
                                android:layout_gravity="center_vertical"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cracks, stains, scratches"
                                android:textSize="14sp"
                                android:textColor="#000000"
                                android:layout_marginEnd="16dp" />

                        </LinearLayout>


                    </LinearLayout>

                    <!-- Repeat the above LinearLayout block for each log entry -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="16dp">

                        <!-- Date -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="28 Mar 2024"
                            android:textSize="16sp"
                            android:textColor="#000000" />
                        <!-- Divider line -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000000"
                            android:layout_marginTop="8dp" />

                        <!-- Icons row -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="4dp">

                            <!-- Red dot icon -->
                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@color/bittersweet"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"/>

                            <!-- White dot icon -->
                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="#FFFFFF"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="16dp">

                        <!-- Date -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23 Apr 2024"
                            android:textSize="16sp"
                            android:textColor="#000000" />
                        <!-- Divider line -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000000"
                            android:layout_marginTop="8dp" />

                        <!-- Icons row -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="4dp">

                            <!-- Red dot icon -->
                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@color/bittersweet"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"/>

                            <!-- White dot icon -->
                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="#FFFFFF"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="16dp">

                        <!-- Date -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="06 Jun 2024"
                            android:textSize="16sp"
                            android:textColor="#000000" />
                        <!-- Divider line -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#000000"
                            android:layout_marginTop="8dp" />

                        <!-- Icons row -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="4dp">

                            <!-- Red dot icon -->
                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@color/bittersweet"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"/>

                            <!-- White dot icon -->
                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="#FFFFFF"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </FrameLayout>
    </FrameLayout>




</FrameLayout>