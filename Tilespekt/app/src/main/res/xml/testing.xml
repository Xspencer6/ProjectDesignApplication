<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header -->
    <TextView
        android:id="@+id/tvDashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Dashboard"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="#3B4A6B"
        android:padding="16dp"
        android:gravity="center" />

    <!-- Container for Latest Scan Results -->
    <LinearLayout
        android:id="@+id/scanResultsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDashboardTitle"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tvLatestScanResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latest Scan Results"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

        <!-- Detected Defects Count -->
        <TextView
            android:id="@+id/tvDetectedDefects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FF6961"
            android:padding="16dp"
            android:text="Detected Defects\n34"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>

        <!-- Defects Location Map and Defect Types Chart -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <!-- Defects Location Image -->
            <ImageView
                android:id="@+id/ivDefectsLocation"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"

            android:contentDescription="Defects Location"
            android:scaleType="fitCenter"
            android:background="#DCE6F0"/>

            <!-- Defect Types Chart -->
            <ImageView
                android:id="@+id/ivDefectTypesChart"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"

            android:contentDescription="Defect Types"
            android:scaleType="fitCenter"
            android:background="#F4F5F7"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Scan Now Button -->
    <Button
        android:id="@+id/btnScanNow"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/scanResultsContainer"
        android:layout_marginTop="24dp"
        android:text="SCAN NOW"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF6961"
        android:textStyle="bold"/>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/ivDashboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

        android:contentDescription="Dashboard Icon"
        android:padding="10dp"
        android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/ivMapping"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

        android:contentDescription="Mapping Icon"
        android:padding="10dp"
        android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/ivHistory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

        android:contentDescription="History Icon"
        android:padding="10dp"
        android:layout_gravity="center"/>
    </LinearLayout>
</RelativeLayout>
